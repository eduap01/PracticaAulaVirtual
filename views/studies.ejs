<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/studies/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="title" placeholder="Title">
            </div>
            <div class="form-group">
              <textsoftware class="form-control" name="description" cols="80"
                placeholder="añade una descripción"
                ></textsoftware>
            </div>
        <div class="form-group">
                      <textsoftware class="form-control" name="link" cols="80"
                        placeholder="añade el link"
                        ></textsoftware>
                    </div>
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N°</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < studies.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= studies[i].description %></strong></td>
              <td><%= studies[i].link %></td>
              <td>

                <a href="/studies/delete/<%= studies[i]._id %>"
                  class="btn btn-danger">
                  Delete
                </a>
                <a href="/studies/edit/<%= studies[i]._id %>" class="btn btn-info">
                  Edit
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>

<% include partials/_footer %>
